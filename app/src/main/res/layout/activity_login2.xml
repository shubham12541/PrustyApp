<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.tominc.prustyapp.LoginActivity">


    <LinearLayout
        android:id="@+id/login_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView

            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Quad"
            android:textSize="50sp"
            android:gravity="center"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_email"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login"
            android:layout_marginTop="70dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/input_password"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <Button
            android:id="@+id/login_submit"
            android:textColor="#FFF"
            android:background="@drawable/loginbox"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Login"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/register_layout"
    android:layout_marginBottom="40dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/login_register"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Account Yet ? Create One"
        android:textColor="#aba9a9"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/login_skip"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip Login"
        android:textColor="#c2bdbd"
        android:textSize="15sp"
        />
</LinearLayout>
    <include
        android:id="@+id/logging_in"
        android:visibility="gone"
        layout="@layout/logging_in_layout" />

</RelativeLayout>
